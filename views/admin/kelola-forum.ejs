<!DOCTYPE html>
<html lang="id">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Manajemen Forum - Portal Alumni</title>
        <link href="https://cdn.jsdelivr.net/npm/daisyui@3.9.2/dist/full.css" rel="stylesheet" type="text/css" />
        <script src="https://cdn.tailwindcss.com"></script>
        <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
        <style>
            body {
                font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            }
        </style>
    </head>
    <body class="min-h-screen bg-[#F0F8F0]">
        <%- include('admin-partials/navbar') %>

        <!-- Moderasi Forum Diskusi Section -->
        <section class="py-16">
            <div class="container mx-auto px-4 max-w-7xl">
                <div class="text-center mb-12">
                    <h2 class="text-3xl lg:text-4xl font-bold mb-4" style="color: #2e7d32">
                        <i class="fas fa-comments mr-3"></i>
                        Moderasi Forum Diskusi
                    </h2>
                    <p class="text-lg" style="color: #666">Kelola dan moderasi diskusi forum alumni</p>
                </div>

                <div class="card shadow-xl feature-card">
                    <div class="card-body">
                        <!-- Filter dan Search -->
                        <div class="flex flex-col lg:flex-row gap-4 mb-6">
                            <div class="flex-1">
                                <input type="text" placeholder="Cari diskusi..." class="input input-bordered w-full" />
                            </div>
                            <select class="select select-bordered">
                                <option>Semua Status</option>
                                <option>Pending</option>
                                <option>Approved</option>
                                <option>Rejected</option>
                            </select>
                            <select class="select select-bordered">
                                <option>Semua Kategori</option>
                                <option>Lowongan Kerja</option>
                                <option>Beasiswa</option>
                                <option>Networking</option>
                            </select>
                        </div>

                        <!-- Daftar Diskusi -->
                        <div class="overflow-x-auto min-h-[480px]">
                            <table class="table table-zebra">
                                <thead>
                                    <tr>
                                        <th>Judul Diskusi</th>
                                        <th>Penulis</th>
                                        <th>Kategori</th>
                                        <th>Tanggal</th>
                                        <th>Status</th>
                                        <th>Aksi</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <!-- Data akan diambil dari database menggunakan loop -->
                                    <!-- Contoh data statis untuk UI -->
                                    <tr>
                                        <td>
                                            <div class="font-semibold">Lowongan Software Engineer di Startup ABC</div>
                                            <div class="text-sm text-gray-500">Diskusi tentang peluang karir...</div>
                                        </td>
                                        <td>
                                            <div class="flex items-center gap-3">
                                                <div class="avatar">
                                                    <div class="mask mask-squircle w-12 h-12">
                                                        <img src="https://img.daisyui.com/images/profile/demo/2@94.webp" alt="Avatar" />
                                                    </div>
                                                </div>
                                                <div>
                                                    <div class="font-bold">John Doe</div>
                                                    <div class="text-sm opacity-50">Alumni 2020</div>
                                                </div>
                                            </div>
                                        </td>
                                        <td>Lowongan Kerja</td>
                                        <td>2024-01-15</td>
                                        <td><span class="badge badge-warning">Pending</span></td>
                                        <td>
                                            <div class="dropdown dropdown-end">
                                                <div tabindex="0" role="button" class="btn btn-ghost btn-xs">
                                                    <i class="fas fa-ellipsis-v"></i>
                                                </div>
                                                <ul tabindex="0" class="dropdown-content z-[1] menu p-2 shadow bg-base-100 rounded-box w-52">
                                                    <li>
                                                        <a onclick="viewPost()"><i class="fas fa-eye mr-2"></i>Lihat Detail</a>
                                                    </li>
                                                    <li>
                                                        <a onclick="approvePost()"><i class="fas fa-check mr-2"></i>Setujui</a>
                                                    </li>
                                                    <li>
                                                        <a onclick="editPost()"><i class="fas fa-edit mr-2"></i>Edit</a>
                                                    </li>
                                                    <li>
                                                        <a onclick="deletePost()"><i class="fas fa-trash mr-2"></i>Hapus</a>
                                                    </li>
                                                </ul>
                                            </div>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <div class="font-semibold">Tips Interview Kerja untuk Fresh Graduate</div>
                                            <div class="text-sm text-gray-500">Sharing pengalaman interview...</div>
                                        </td>
                                        <td>
                                            <div class="flex items-center gap-3">
                                                <div class="avatar">
                                                    <div class="mask mask-squircle w-12 h-12">
                                                        <img src="https://img.daisyui.com/images/profile/demo/3@94.webp" alt="Avatar" />
                                                    </div>
                                                </div>
                                                <div>
                                                    <div class="font-bold">Jane Smith</div>
                                                    <div class="text-sm opacity-50">Alumni 2019</div>
                                                </div>
                                            </div>
                                        </td>
                                        <td>Networking</td>
                                        <td>2024-01-14</td>
                                        <td><span class="badge badge-success">Approved</span></td>
                                        <td>
                                            <div class="dropdown dropdown-end">
                                                <div tabindex="0" role="button" class="btn btn-ghost btn-xs">
                                                    <i class="fas fa-ellipsis-v"></i>
                                                </div>
                                                <ul tabindex="0" class="dropdown-content z-[1] menu p-2 shadow bg-base-100 rounded-box w-52">
                                                    <li>
                                                        <a onclick="viewPost()"><i class="fas fa-eye mr-2"></i>Lihat Detail</a>
                                                    </li>
                                                    <li>
                                                        <a onclick="editPost()"><i class="fas fa-edit mr-2"></i>Edit</a>
                                                    </li>
                                                    <li>
                                                        <a onclick="deletePost()"><i class="fas fa-trash mr-2"></i>Hapus</a>
                                                    </li>
                                                </ul>
                                            </div>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>

                        <!-- Pagination -->
                        <div class="flex justify-center mt-6">
                            <div class="join">
                                <button class="join-item btn">«</button>
                                <button class="join-item btn">1</button>
                                <button class="join-item btn btn-active">2</button>
                                <button class="join-item btn">3</button>
                                <button class="join-item btn">»</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Modal untuk Detail Diskusi -->
        <dialog id="detailModal" class="modal">
            <div class="modal-box w-11/12 max-w-4xl">
                <h3 class="font-bold text-lg mb-4" style="color: #2e7d32">Detail Diskusi</h3>
                <!-- Konten detail akan diisi dari database -->
                <div class="py-4">
                    <h4 class="font-semibold mb-2">Judul: <span id="postTitle"></span></h4>
                    <p class="mb-2">Penulis: <span id="postAuthor"></span></p>
                    <p class="mb-2">Kategori: <span id="postCategory"></span></p>
                    <p class="mb-4">Tanggal: <span id="postDate"></span></p>
                    <div class="mb-4">
                        <h5 class="font-semibold mb-2">Konten:</h5>
                        <div id="postContent" class="p-4 bg-gray-50 rounded-lg"></div>
                    </div>
                </div>
                <div class="modal-action">
                    <form method="dialog">
                        <button class="btn">Tutup</button>
                        <button class="btn btn-success ml-2">Setujui</button>
                        <button class="btn btn-error ml-2">Tolak</button>
                    </form>
                </div>
            </div>
        </dialog>

        <script>
            // Fungsi untuk menampilkan detail post
            function viewPost() {
                // Ambil data dari database dan tampilkan di modal
                document.getElementById('detailModal').showModal();
            }

            // Fungsi untuk menyetujui post
            function approvePost() {
                // Kirim request ke server untuk approve post
                if (confirm('Apakah Anda yakin ingin menyetujui diskusi ini?')) {
                    // AJAX call ke server
                    console.log('Post approved');
                }
            }

            // Fungsi untuk mengedit post
            function editPost() {
                // Redirect ke halaman edit atau buka modal edit
                console.log('Edit post');
            }

            // Fungsi untuk menghapus post
            function deletePost() {
                // Konfirmasi hapus dan kirim request ke server
                if (confirm('Apakah Anda yakin ingin menghapus diskusi ini?')) {
                    // AJAX call ke server
                    console.log('Post deleted');
                }
            }
        </script>

        <%- include('admin-partials/footer') %>
    </body>
</html>
