<!DOCTYPE html>
 <html lang="id">
 <head>
   <meta charset="UTF-8" />
   <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
   <title>Pengajuan Postingan Lowongan</title>
   <link href="https://cdn.jsdelivr.net/npm/daisyui@4.10.2/dist/full.min.css" rel="stylesheet" type="text/css" />
   <script src="https://cdn.tailwindcss.com"></script>
 </head>
 <body class="bg-gradient-to-br from-green-50 to-green-100 min-h-screen p--1">
 <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
        <style>
            body {
                font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            }
        </style>
    </head>
    <body class="min-h-screen bg-[#F0F8F0]">
        <!-- Include Navbar -->
        <%- include('alumni-partials/navbar') %>

   <!-- Form Section -->
   <div class="max-w-xl mx-auto mt-7 mb-4">
     <div id="successMessage" class="alert alert-success hidden mb-4">
       <span>Lowongan berhasil diajukan! Data telah tersimpan.</span>
     </div>
 
     <div class="bg-white p-8 rounded-2xl shadow-lg border border-gray-200">
       <h2 class="text-2xl font-bold text-green-800 text-center mb-6 border-b pb-3">Pengajuan Postingan Lowongan</h2>
       <form id="jobForm" class="space-y-4">
         <div class="form-control">
           <label class="label">
             <span class="label-text">Judul Lowongan</span>
           </label>
           <input type="text" id="jobTitle" class="input input-bordered" placeholder="Masukkan judul lowongan" required/>
         </div>
 
         <div class="form-control">
           <label class="label">
             <span class="label-text">Tanggal Buka</span>
           </label>
           <input type="date" id="openDate" class="input input-bordered" required/>
         </div>
 
         <div class="form-control">
           <label class="label">
             <span class="label-text">Tanggal Tutup</span>
           </label>
           <input type="date" id="closeDate" class="input input-bordered" required/>
         </div>
 
         <div class="form-control">
           <label class="label">
             <span class="label-text">Kuota</span>
           </label>
           <input type="number" id="quota" class="input input-bordered" min="1" required placeholder="Jumlah kuota yang dibutuhkan"/>
         </div>
 
         <div class="form-control">
           <label class="label">
             <span class="label-text">Salary</span>
           </label>
           <input type="text" id="salary" class="input input-bordered" placeholder="Contoh: Rp 5.000.000 - 8.000.000" required/>
         </div>
 
         <div class="form-control">
           <label class="label">
         </div>
 
         <div class="text-end">
           <button type="submit" class="btn btn-warning text-white font-semibold px-8">Submit</button>
         </div>
       </form>
     </div>
   </div>
 
   <!-- JavaScript -->
   <script>
     const today = new Date().toISOString().split('T')[0];
     const openDate = document.getElementById('openDate');
     const closeDate = document.getElementById('closeDate');
 
     openDate.min = today;
     closeDate.min = today;
 
     openDate.addEventListener('change', () => {
       closeDate.min = openDate.value;
     });
 
     document.getElementById('jobForm').addEventListener('submit', function(e) {
       e.preventDefault();
 
       const start = new Date(openDate.value);
       const end = new Date(closeDate.value);
       if (end <= start) {
         alert('Tanggal tutup harus setelah tanggal buka!');
         return;
       }
 
       const data = {
         title: document.getElementById('jobTitle').value,
         openDate: openDate.value,
         closeDate: closeDate.value,
         quota: document.getElementById('quota').value,
         salary: document.getElementById('salary').value,
 
         timestamp: new Date().toISOString()
       };
 
       console.log('Form Data:', data);
 
       document.getElementById('successMessage').classList.remove('hidden');
       this.reset();
       window.scrollTo({ top: 0, behavior: 'smooth' });
 
       setTimeout(() => {
         document.getElementById('successMessage').classList.add('hidden');
       }, 5000);
     });
 
     document.getElementById('quota').addEventListener('input', function () {
       this.setCustomValidity(this.value < 1 ? 'Kuota minimal 1 orang' : '');
     });
 
     document.getElementById('salary').addEventListener('input', function () {
       let value = this.value.replace(/[^\d\-\s]/g, '');
       if (value && !value.includes('Rp') && /^\d+$/.test(value.replace(/[\s\-]/g, ''))) {
         this.value = 'Rp ' + value;
       }
     });
   </script>
 <!-- Include Footer -->
        <%- include('alumni-partials/footer') %>
 </body>
 </html>
 