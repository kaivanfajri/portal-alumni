<!DOCTYPE html>
<html lang="id" data-theme="light">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Portal Alumni FTI - Kalender Acara</title>
        <link href="https://cdn.jsdelivr.net/npm/daisyui@4.12.10/dist/full.min.css" rel="stylesheet" type="text/css" />
        <script src="https://cdn.tailwindcss.com"></script>
        <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
        <link href="https://cdn.jsdelivr.net/npm/daisyui@4.12.10/dist/full.min.css" rel="stylesheet" type="text/css" />
        <script src="https://cdn.tailwindcss.com"></script>
        <style>

                .modal-content {
                background: white;
                border-radius: 12px;
                box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
                max-width: 600px;
                width: 95%;
                margin: 0 auto;
            }
            .form-section {
                background: white;
                border-radius: 12px;
                box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
            }
            .table-section {
                background: white;
                border-radius: 12px;
                box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
                margin-top: 2rem;
            }
        </style>
    </head>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
        <style>
            body {
                font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            }
        </style>
    </head>
    <body class="min-h-screen bg-[#F0F8F0]">
        <!-- Include Navbar -->
        <%- include('alumni-partials/navbar') %>

        <!-- Main Content -->
        <div class="container mx-auto px-4 py-8">
            <!-- Page Title -->
            <div class="text-center mb-8">
                <h2 class="text-3xl font-bold text-green-600">Tampilan Kalender Acara</h2>
                <p class="text-gray-600 mt-2">Lihat jadwal acara alumni dan kegiatan mendatang</p>
            </div>

            <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
                <!-- Calendar Section -->
                <div class="lg:col-span-2">
                    <div class="card bg-white shadow-lg">
                        <div class="card-body">
                            <!-- Calendar Header -->
                            <div class="flex justify-between items-center mb-4">
                                <button class="btn btn-circle btn-ghost" onclick="previousMonth()">
                                    <i class="fas fa-chevron-left"></i>
                                </button>
                                <h3 class="text-xl font-semibold" id="monthYear">Aug 2025</h3>
                                <button class="btn btn-circle btn-ghost" onclick="nextMonth()">
                                    <i class="fas fa-chevron-right"></i>
                                </button>
                            </div>

                            <!-- Calendar Grid -->
                            <div class="overflow-x-auto">
                                <table class="table w-full">
                                    <thead>
                                        <tr class="border-b">
                                            <th class="text-center font-medium text-gray-600">S</th>
                                            <th class="text-center font-medium text-gray-600">M</th>
                                            <th class="text-center font-medium text-gray-600">T</th>
                                            <th class="text-center font-medium text-gray-600">W</th>
                                            <th class="text-center font-medium text-gray-600">T</th>
                                            <th class="text-center font-medium text-gray-600">F</th>
                                            <th class="text-center font-medium text-gray-600">S</th>
                                        </tr>
                                    </thead>
                                    <tbody id="calendarBody">
                                        <!-- Calendar days will be generated by JavaScript -->
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Events Section -->
                <div class="lg:col-span-1">
                    <div class="card bg-white shadow-lg">
                        <div class="card-body">
                            <h3 class="text-xl font-bold mb-4 text-green-600">Acara pada 17 Agustus 2025</h3>

                            <div class="space-y-4" id="eventsContainer">
                                <!-- Event 1 -->
                                <div class="alert alert-info">
                                    <div class="flex-1">
                                        <div class="flex items-center gap-2">
                                            <i class="fas fa-clock text-info"></i>
                                            <span class="font-semibold">18:00</span>
                                        </div>
                                        <p class="font-medium mt-1">Reuni Akbar 2025</p>
                                        <p class="text-sm text-gray-600 mt-1">Auditorium Utama FTI</p>
                                    </div>
                                </div>

                                <!-- Event 2 -->
                                <div class="alert alert-success">
                                    <div class="flex-1">
                                        <div class="flex items-center gap-2">
                                            <i class="fas fa-clock text-success"></i>
                                            <span class="font-semibold">20:00</span>
                                        </div>
                                        <p class="font-medium mt-1">Seminar Karir Alumni</p>
                                        <p class="text-sm text-gray-600 mt-1">Ruang Seminar Lt. 3</p>
                                    </div>
                                </div>
                            </div>

                            <!-- Event Details Button -->
                            <div class="mt-6">
                                <button class="btn btn-outline btn-primary btn-block" onclick="showEventDetails()">
                                    <i class="fas fa-info-circle mr-2"></i>
                                    Detail Acara
                                </button>
                            </div>
                        </div>
                    </div>

                    <!-- Upcoming Events Card -->
                     
                    <div class="card bg-white shadow-lg mt-6">
                        <div class="card-body">
                            <h3 class="text-lg font-bold mb-4 text-green-600">
                                <i class="fas fa-calendar-alt mr-2"></i>
                                Acara Mendatang
                            </h3>

                            <div class="space-y-3">
                                <div class="flex items-center gap-3 p-3 bg-base-200 rounded-lg">
                                    <div class="text-center">
                                        <div class="text-sm font-bold text-primary">20</div>
                                        <div class="text-xs text-gray-600">AGU</div>
                                    </div>
                                    <div class="flex-1">
                                        <p class="font-medium">Workshop Teknologi</p>
                                        <p class="text-sm text-gray-600">14:00 - Lab Komputer</p>
                                    </div>
                                </div>

                                <div class="flex items-center gap-3 p-3 bg-base-200 rounded-lg">
                                    <div class="text-center">
                                        <div class="text-sm font-bold text-success">25</div>
                                        <div class="text-xs text-gray-600">AGU</div>
                                    </div>
                                    <div class="flex-1">
                                        <p class="font-medium">Networking Event</p>
                                        <p class="text-sm text-gray-600">19:00 - Hotel Aryaduta</p>
                                    </div>
                                </div>

                                <div class="flex items-center gap-3 p-3 bg-base-200 rounded-lg">
                                    <div class="text-center">
                                        <div class="text-sm font-bold text-warning">02</div>
                                        <div class="text-xs text-gray-600">SEP</div>
                                    </div>
                                    <div class="flex-1">
                                        <p class="font-medium">Alumni Gathering</p>
                                        <p class="text-sm text-gray-600">16:00 - Kampus FTI</p>
                                    </div>
                                </div>
                            </div>

                          
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Event Details Modal -->
        <div id="eventDetailsModal" class="modal">
            <div class="modal-box max-w-2xl">
                <h3 class="font-bold text-lg mb-4">Detail Acara</h3>

                <div id="eventDetailsContent">
                    <!-- Event details will be populated by JavaScript -->
                </div>

                <div class="modal-action">
                    <button class="btn btn-primary" onclick="registerForEvent()">
                        <i class="fas fa-user-plus mr-2"></i>
                        Daftar Acara
                    </button>
                    <button class="btn" onclick="closeEventDetailsModal()">Tutup</button>
                </div>
            </div>
        </div>

        <script>
            // Calendar functionality
            let currentDate = new Date(2025, 7, 1); // August 2025 (month is 0-indexed)
            let events = {
                '2025-08-17': [
                    {
                        time: '18:00',
                        title: 'Reuni Akbar 2025',
                        type: 'info',
                        location: 'Auditorium Utama FTI',
                        description: 'Acara reuni tahunan alumni FTI dengan berbagai kegiatan menarik, door prize, dan networking session.',
                        organizer: 'Himpunan Alumni FTI',
                        capacity: '500 peserta',
                    },
                    {
                        time: '20:00',
                        title: 'Seminar Karir Alumni',
                        type: 'success',
                        location: 'Ruang Seminar Lt. 3',
                        description: 'Seminar tentang perkembangan karir di bidang teknologi informasi dengan pembicara alumni yang sudah sukses.',
                        organizer: 'Career Center FTI',
                        capacity: '200 peserta',
                    },
                ],
                '2025-08-20': [
                    {
                        time: '14:00',
                        title: 'Workshop Teknologi',
                        type: 'primary',
                        location: 'Lab Komputer',
                        description: 'Workshop hands-on tentang teknologi terbaru dalam pengembangan software.',
                        organizer: 'Komunitas Programmer Alumni',
                        capacity: '50 peserta',
                    },
                ],
                '2025-08-25': [
                    {
                        time: '19:00',
                        title: 'Networking Event',
                        type: 'success',
                        location: 'Hotel Aryaduta',
                        description: 'Acara networking untuk mempererat hubungan antar alumni dan membuka peluang kerjasama.',
                        organizer: 'Alumni Network FTI',
                        capacity: '300 peserta',
                    },
                ],
                '2025-09-02': [
                    {
                        time: '16:00',
                        title: 'Alumni Gathering',
                        type: 'warning',
                        location: 'Kampus FTI',
                        description: 'Gathering bulanan alumni dengan agenda sharing pengalaman dan diskusi perkembangan industri.',
                        organizer: 'Ikatan Alumni FTI',
                        capacity: '150 peserta',
                    },
                ],
            };

            const monthNames = ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'];

            function generateCalendar() {
                const year = currentDate.getFullYear();
                const month = currentDate.getMonth();

                // Update month/year display
                document.getElementById('monthYear').textContent = `${monthNames[month]} ${year}`;

                // Get first day of month and number of days
                const firstDay = new Date(year, month, 1).getDay();
                const daysInMonth = new Date(year, month + 1, 0).getDate();

                // Clear calendar body
                const calendarBody = document.getElementById('calendarBody');
                calendarBody.innerHTML = '';

                let date = 1;

                // Generate calendar rows
                for (let week = 0; week < 6; week++) {
                    const row = document.createElement('tr');

                    for (let day = 0; day < 7; day++) {
                        const cell = document.createElement('td');
                        cell.className = 'text-center p-2 hover:bg-base-200 cursor-pointer';

                        if (week === 0 && day < firstDay) {
                            // Empty cells before first day
                            cell.innerHTML = '';
                        } else if (date > daysInMonth) {
                            // Empty cells after last day
                            cell.innerHTML = '';
                        } else {
                            const dateStr = `${year}-${String(month + 1).padStart(2, '0')}-${String(date).padStart(2, '0')}`;

                            // Check if this date has events
                            const hasEvents = events[dateStr] && events[dateStr].length > 0;

                            if (date === 17 && month === 7) {
                                // Highlight August 17th
                                cell.innerHTML = `<div class="bg-primary text-primary-content rounded-full w-8 h-8 flex items-center justify-center mx-auto font-semibold">${date}</div>`;
                            } else if (hasEvents) {
                                cell.innerHTML = `<div class="bg-accent text-accent-content rounded-full w-8 h-8 flex items-center justify-center mx-auto">${date}</div>`;
                            } else {
                                cell.innerHTML = `<div class="w-8 h-8 flex items-center justify-center mx-auto">${date}</div>`;
                            }

                            cell.onclick = () => selectDate(dateStr);
                            date++;
                        }

                        row.appendChild(cell);
                    }

                    calendarBody.appendChild(row);

                    if (date > daysInMonth) break;
                }
            }

            function previousMonth() {
                currentDate.setMonth(currentDate.getMonth() - 1);
                generateCalendar();
            }

            function nextMonth() {
                currentDate.setMonth(currentDate.getMonth() + 1);
                generateCalendar();
            }

            function selectDate(dateStr) {
                const date = new Date(dateStr);
                const day = date.getDate();
                const month = monthNames[date.getMonth()];
                const year = date.getFullYear();

                // Update events section
                updateEventsDisplay(dateStr, `${day} ${month} ${year}`);
            }

            function updateEventsDisplay(dateStr, dateLabel) {
                const eventsSection = document.querySelector('.card-body h3');
                eventsSection.textContent = `Acara pada ${dateLabel}`;

                const eventsContainer = document.getElementById('eventsContainer');
                eventsContainer.innerHTML = '';

                if (events[dateStr] && events[dateStr].length > 0) {
                    events[dateStr].forEach((event) => {
                        const eventDiv = document.createElement('div');
                        eventDiv.className = `alert alert-${event.type}`;
                        eventDiv.innerHTML = `
                        <div class="flex-1">
                            <div class="flex items-center gap-2">
                                <i class="fas fa-clock text-${event.type}"></i>
                                <span class="font-semibold">${event.time}</span>
                            </div>
                            <p class="font-medium mt-1">${event.title}</p>
                            <p class="text-sm text-gray-600 mt-1">${event.location}</p>
                        </div>
                    `;
                        eventsContainer.appendChild(eventDiv);
                    });
                } else {
                    const noEventsDiv = document.createElement('div');
                    noEventsDiv.className = 'alert';
                    noEventsDiv.innerHTML = '<p>Tidak ada acara pada tanggal ini</p>';
                    eventsContainer.appendChild(noEventsDiv);
                }
            }

            function showEventDetails() {
                const modal = document.getElementById('eventDetailsModal');
                const content = document.getElementById('eventDetailsContent');

                // Get current selected date events (default to Aug 17, 2025)
                const currentEvents = events['2025-08-17'] || [];

                if (currentEvents.length > 0) {
                    content.innerHTML = currentEvents
                        .map(
                            (event) => `
                    <div class="card bg-base-100 border mb-4">
                        <div class="card-body">
                            <h4 class="card-title text-${event.type}">${event.title}</h4>
                            <div class="space-y-2">
                                <div class="flex items-center gap-2">
                                    <i class="fas fa-clock text-gray-500"></i>
                                    <span>${event.time}</span>
                                </div>
                                <div class="flex items-center gap-2">
                                    <i class="fas fa-map-marker-alt text-gray-500"></i>
                                    <span>${event.location}</span>
                                </div>
                                <div class="flex items-center gap-2">
                                    <i class="fas fa-users text-gray-500"></i>
                                    <span>${event.capacity}</span>
                                </div>
                                <div class="flex items-center gap-2">
                                    <i class="fas fa-user text-gray-500"></i>
                                    <span>${event.organizer}</span>
                                </div>
                            </div>
                            <p class="mt-3 text-gray-700">${event.description}</p>
                        </div>
                    </div>
                `
                        )
                        .join('');
                }

                modal.classList.add('modal-open');
            }

            function closeEventDetailsModal() {
                document.getElementById('eventDetailsModal').classList.remove('modal-open');
            }

            function registerForEvent() {
                // Show success message
                const toast = document.createElement('div');
                toast.className = 'toast toast-top toast-end';
                toast.innerHTML = `
                <div class="alert alert-success">
                    <span>Pendaftaran berhasil! Anda akan menerima konfirmasi via email.</span>
                </div>
            `;
                document.body.appendChild(toast);

                setTimeout(() => {
                    document.body.removeChild(toast);
                }, 3000);

                closeEventDetailsModal();
            }

            // Initialize calendar on page load
            document.addEventListener('DOMContentLoaded', function () {
                generateCalendar();
            });

            // Close modal when clicking outside
            document.getElementById('eventDetailsModal').addEventListener('click', function (e) {
                if (e.target === this) {
                    closeEventDetailsModal();
                }
            });
        </script>

        <!-- Include Footer -->
        <%- include('alumni-partials/footer') %>
        
    </body>
</html>
